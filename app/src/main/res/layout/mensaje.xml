<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro Mensaje"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje" />

    <EditText
        android:id="@+id/mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/radiogroup">

            <RadioButton
                android:id="@+id/mensajeAgradable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agradable" />

            <RadioButton
                android:id="@+id/mensajeNoAgradable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No Agradable" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/agregarMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Mensaje" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensajes Agradables"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:id="@+id/Agradables"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensajes no Agradables" />

    <ListView
        android:id="@+id/noAgradables"
        android:layout_width="match_parent"
        android:layout_height="134dp" />

    <Button
        android:id="@+id/salirMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lISTO!" />
</LinearLayout>